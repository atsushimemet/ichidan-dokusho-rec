# Supabase設定
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# LINE Bot設定
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# API認証用キー（ランダムな文字列を生成してください）
SCHEDULER_API_KEY=your-scheduler-api-key
NOTIFICATION_API_KEY=your-notification-api-key

# クイズトークン暗号化用キー（ランダムな文字列を生成してください）
QUIZ_TOKEN_SECRET=your-quiz-token-secret

# ベースURL（デプロイ後のドメインを設定）
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Node.js環境
NODE_ENV=production